<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cinema_background"
    android:orientation="vertical"
    tools:context=".features.movies.presentation.MovieActivity">

    <!-- Fila 1 -->

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="275dp"
        android:gravity="center"
        android:text="LISTA DE PELÍCULAS"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/layout_movie_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_id_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp">
            <!-- android:text="@string/name_file_xml" Acceder a un recurso-->
        </TextView>

        <TextView
            android:id="@+id/movie_title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp">

        </TextView>
    </LinearLayout>

    <!-- Fila 2 -->
    <LinearLayout
        android:id="@+id/layout_movie_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_id_2"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/movie_title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp">

        </TextView>
    </LinearLayout>

    <!-- Fila 3 -->
    <LinearLayout
        android:id="@+id/layout_movie_3"
        android:layout_width="match_parent"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_id_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/movie_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </LinearLayout>

    <!-- Fila 4 -->
    <LinearLayout
        android:id="@+id/layout_movie_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/movie_id_4"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:textSize="20sp">

        </TextView>

        <TextView
            android:id="@+id/movie_title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:layout_marginStart="20dp"
            android:textSize="20sp">

        </TextView>
    </LinearLayout>
</LinearLayout>
